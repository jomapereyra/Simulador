{% extends "base_usuario.twig" %}

{% block head %}

    {{ parent() }}

    {# Utilizo el estilo JQuery UI #}
    <link href="css/jquery-ui.min.css" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block content %}

    <div class="row">

        <section class="col m10 s12 offset-m1 ">

            <div class="col s6 left-align">
                <a class="btn waves-effect white grey-text darken-text-2" id="last">Reanudar</a>
            </div>

        </section>

    </div>

    <section class="col m10 s12 offset-m1 ">

        <nav>
            <div class="nav-wrapper">
                <div class="col s12 center-align breadcrumb_settings" id="breadcrumb_autoevaluacion"></div>
            </div>
        </nav>

        <div
            id="autoevaluacion">

            {# Contenido de cada panel/etapa de la autoevaluacion #}

            <div
                class="card-panel teal lighten-2 margin_autoevaluacion" id="panel_autoevaluacion">

                {# Autoanalisis #}

                <div class="contenido_panel" id="contenido">
                    {% include "autoevaluacion/autoanalisis.html" %}
                </div>

                {# Error - faltan actividades #}

                <div class="contenido_panel">
                    <div class="card-panel" hidden id="error_etapa"></div>
                </div>

            </div>

            <div
                class="container">

                {# Progress Bar #}

                <label class="right-align" for="progreso">Progreso del recorrido:
                    <span id="mi_porcentaje">0%<span></label>
                        <div class="progress" id="progreso">
                            <div class="determinate" style="width: 0%"></div>
                        </div>

                        {# Botones para desplazarse #}

                        <div class="col s6 left-align">
                            <a class="btn waves-effect white grey-text darken-text-2" id="prev">Anterior</a>
                        </div>
                        <div class="col s6 right-align">
                            <a class="btn waves-effect white grey-text darken-text-2" id="next">Siguiente</a>
                        </div>

                    </div>

                </div>

            </section>
        {% endblock %}
        {% block js %}

            {{ parent() }}

            {# JQuery UI #}

            <script src="js/jquery-ui.min.js" type="text/javascript"></script>

            {# Autoevaluacion #}
            
            <script src="js/autoevaluacion.js" type="text/javascript"></script>

        {% endblock %}
