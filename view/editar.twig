<div class="card-panel blue lighten-4 z-depth-3">

    <form id="formulario_editar" onsubmit="return validar_editar();">

        <div class="row">

            <div class="col s12">

                <fieldset>

                    <legend class="sr-only">Edicion de Perfil: en esta seccion usted puede modificar sus datos personales</legend>

                    {# Mensaje de Formulario #}

                    <div class="input-field col s12 ocultar accesible" id="mensaje_editar" tabindex="6"></div>

                    {# Nombre y Apellido #}

                    <div class="input-field col s6">
                        <input aria-required="true" class="validate accesible" data-hidden="nombre" id="nombre" maxlength="30" name="nombre" type="text" value='{{nombre}}' tabindex="7">
                        <label for="nombre">Nombre</label>
                        <span class="helper-text red-text text-lighten-2 error" id="nombre_error" role="alert"></span>
                    </div>

                    <div class="input-field col s6">
                        <input aria-required="true" class="validate accesible" data-hidden="apellido" id="apellido" maxlength="30" name="apellido" type="text" value='{{apellido}}' tabindex="8">
                        <label for="apellido">Apellido</label>
                        <span class="helper-text red-text text-lighten-2 error" id="apellido_error" role="alert"></span>
                    </div>

                    {# Correo #}

                    <div class="input-field col s12">
                        <i aria-hidden="true" class="material-icons prefix">email</i>
                        <input aria-describedby="ayuda_correo" aria-required="true" class="validate accesible" data-hidden="correo" id="correo" maxlength="40" name="correo" type="text" value='{{correo}}' tabindex="9">
                        <label for="correo">Correo</label>
                        <span class="helper-text" id="ayuda_correo">El correo debe respetar el siguiente formato: "texto@dominio" donde dominio puede ser, por ejemplo, gmail.com</span>
                        <span class="helper-text red-text text-lighten-2 error" id="correo_error" role="alert"></span>
                    </div>

                    {# Pregunta #}

                    <div class="input-field col s12">
                        <div class="flow-text">¿Es hipoacúsico de nacimiento o postlocutivo?</div>
                    </div>

                    <fieldset>

                        <legend class="sr-only">¿Es hipoacúsico de nacimiento o postlocutivo?</legend>

                        <div class="col s12">

                            {% if hipoacusico_nacimiento == 'Soy hipoacúsico de nacimiento' %}

                                <p>
                                    <label for="hipoacusico">
                                        <input id="hipoacusico" name="pregunta" type="radio" value="1" checked class="accesible" tabindex="10"/>
                                        <span>Soy hipoacúsico de nacimiento</span>
                                    </label>
                                </p>

                                <p>
                                    <label>
                                        <input id="postlocutivo" name="pregunta" type="radio" value="0" class="accesible" tabindex="10"/>
                                        <span>Soy postlocutivo</span>
                                    </label>
                                </p>

                            {% else %}

                                <p>
                                    <label for="hipoacusico">
                                        <input id="hipoacusico" name="pregunta" type="radio" value="1" class="accesible" tabindex="10"/>
                                        <span>Soy hipoacúsico de nacimiento</span>
                                    </label>
                                </p>

                                <p>
                                    <label>
                                        <input id="postlocutivo" name="pregunta" type="radio" value="0" checked class="accesible" tabindex="10"/>
                                        <span>Soy postlocutivo</span>
                                    </label>
                                </p>

                            {% endif %}

                        </div>

                        <div class="col s12">
                            <span class="helper-text red-text text-lighten-2 error" id="pregunta_error" role="alert"></span>
                        </div>

                    </fieldset>

                    {# Nivel educativo #}

                    <div class="input-field col s12">
                        <div class="flow-text">
                            <i class="material-icons">school</i>
                            Nivel educativo alcanzado
                        </div>
                    </div>

                    <fieldset>

                        <legend class="sr-only">Nivel educativo alcanzado</legend>

                        {% if id_nivel == 1 %}

                            <div class="col s12">
                                <p>
                                    <label>
                                        <input id="Secundario" name="nivel" type="radio" value="1" checked class="accesible" tabindex="11"/>
                                        <span>Secundario</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input id="Terciario" name="nivel" type="radio" value="2" class="accesible" tabindex="11"/>
                                        <span>Terciario</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input id="Universitario" name="nivel" type="radio" value="3" class="accesible" tabindex="11"/>
                                        <span>Universitario</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input id="Postgrado" name="nivel" type="radio" value="4" class="accesible" tabindex="11"/>
                                        <span>Postgrado</span>
                                    </label>
                                </p>

                            </div>

                        {% elseif id_nivel == 2 %}

                            <div class="col s12">
                                <p>
                                    <label>
                                        <input id="Secundario" name="nivel" type="radio" value="1" class="accesible" tabindex="11"/>
                                        <span>Secundario</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
